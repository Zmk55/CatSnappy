[Unit]
Description=CatSnappy Web Application
After=network.target
Wants=network.target

[Service]
Type=simple
User=tim
Group=tim
WorkingDirectory=/home/tim/CatSnappy
Environment=DATABASE_URL=postgresql://postgres:postgres@localhost:5432/catsnappy
Environment=NODE_ENV=development
ExecStart=/usr/local/bin/pnpm dev
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=default.target
